[run]
# include = ./src/* 
source = ./src
branch = True
relative_files = True
omit =
    # omit anything in a .local directory anywhere
    */.local/*
    # omit everything in /usr
    /usr/*
    # omit utest
    ./utest/*
    # robot library
    ./src/robotide/lib/robot/*
    */.venv/*

[report]
skip_empty = True
exclude_lines =
    if __name__ == '__main__':
 
[xml]
output = ./.coverage-reports/coverage.xml

[html]
directory = ./.coverage-reports/htmlcov

